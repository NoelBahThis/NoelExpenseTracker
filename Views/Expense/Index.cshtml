@model IEnumerable<NoelExpenseTracker.Models.Expense>
@{
    ViewData["Title"] = "My Expenses";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">

<div class="container p-3">
     <div class="row pt-4">
          <div class="col-6">
               <h2 class="text-primary">Expense List</h2>
               
          </div>

          <div class="col-6 text-right">
               <a class=" btn btn-outline-primary" asp-controller="Expense" asp-action="Create">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                         <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                         <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg>
                    Create New Expense
                    
               </a>

          </div>

     </div>

     <br />

    @if (Model.Count() > 0)
    {
         <table class="table table-bordered table-striped" style="width:100%;">
              <thead>
                   <tr>
                        <th>Expense Name</th>
                        <th>Amount</th>
                        <th>Changes</th>
                   </tr>
              </thead>
              <tbody>
                @foreach (var item in Model)
                {
                    
                   <tr>
                        <td width="33%">@item.ExpenseName</td>
                        <td width="33%">@item.Amount</td>
                        <td width="33%">
                             <div class="w-100 text-center btn-group" role="group">
                                  <a class="text-center btn btn-info mx-1" asp-action="Update" asp-route-Id="@item.Id">Update</a>
                                  <a class="text-center btn btn-danger mx-1" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
                             </div>
                           
                        </td>
                   </tr>
                    
                    
                }
              </tbody>
         </table>
    }
    else
    {
         <p class="text-center">
              No Expenses created yet😔
         </p>
    }


</div>